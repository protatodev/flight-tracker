@{
    Layout = "_Layout";
}

<div class="row">
    <div class="col-sm-12">
        <div class="jumbotron">
            <h1>@Model.FlightNum</h1>
        </div>
        <a href="/new-flight" class="btn btn-primary">Add New Flight</a>
        <a href="/" class="btn btn-primary">Return to Home</a>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <h2><a href="/flight/@Model.Id/details">@Model.FlightNum</a></h2>
        <hr />
        <form action="/flight/@Model.Id/update" method="post">
            <div class="form-group">
                <label for="newFlightNum">Flight Number:</label>
                <input type="text" name="newFlightNum" value="@Model.FlightNum" required>
            </div>
            <div class="form-group">
                <label for="newTime">Time:</label>
                <input type="time" name="newTime" value="@Model.Time" required>
            </div>
            <div class="form-group">
                <label for="newArrival_Departure">Select Flight Type</label>
                <select name="newArrival_Departure" required>
                    <option value="Arrival">Arrival</option>
                    <option value="Departure">Departure</option>
                </select>
            </div>
            <div class="form-group">
                <label for="newStatus">Select Flight Status</label>
                <select name="newStatus" required>
                    <option value="On-Time">On Time</option>
                    <option value="Delayed">Delayed</option>
                </select>
            </div>
            <div class="form-group">
                <label for="newCityId">Select City</label>
                <select name="newCityId" required>
                    @foreach(var city in Model.GetAllCities())
                    {
                        <option value="@city.Id">@city.Name</option>
                    }
                </select>
            </div>
            
            <button type="submit" class="btn btn-primary">Edit</button>
        </form>
        <form class="inline-form-button" method="post" action="/flight/@Model.Id/delete"><button type="submit" class="btn btn-danger">Delete</button></form>
        <a href="/" class="btn btn-primary">Return to Home</a>
    </div>
</div>